.SUFFIXES:	.lo

CC=@CC@
CPPFLAGS=@CPPFLAGS@
CFLAGS=@CFLAGS@
SHCFLAGS=@SHCFLAGS@
LDFLAGS=@LDFLAGS@
DEPFLAGS=@DEPFLAGS@
AR=@AR@
RANLIB=@RANLIB@
LIBS=@LIBS@
INSTALL=@INSTALL@

top_srcdir=@top_srcdir@

OBJS=	eventer.o eventer_impl.o \
	@EVENTER_OBJS@ \
	eventer_POSIX_fd_opset.o \
	eventer_SSL_fd_opset.o OETS_asn1_helper.o \
	eventer_jobq.o

all:	libeventer.a

libeventer.a:	$(OBJS)
	@rm -f $@
	@$(AR) cq $@ $(OBJS)
	@echo "- archiving $@"
	@$(RANLIB) $@

.c.lo:
	@$(CC) $(CPPFLAGS) $(SHCFLAGS) -c $< -o $@
	@echo "- compiling $<"

.c.o:
	@$(CC) $(CPPFLAGS) $(CFLAGS) -c $<
	@echo "- compiling $<"

clean:
	rm -f *.o libeventer.a

distclean:	clean
	rm -f Makefile

Makefile.dep:
	$(CC) -I. -I.. $(CPPFLAGS) $(CFLAGS) $(DEPFLAGS) *.c > Makefile.dep
	$(top_srcdir)/buildtools/culldeps.sh Makefile.dep

include Makefile.dep
