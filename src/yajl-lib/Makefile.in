.SUFFIXES:	.lo

CC=@CC@
CPPFLAGS=@CPPFLAGS@
CFLAGS=@CFLAGS@
SHCFLAGS=@SHCFLAGS@
DEPFLAGS=@DEPFLAGS@
LDFLAGS=@LDFLAGS@
AR=@AR@
RANLIB=@RANLIB@
LIBS=@LIBS@
INSTALL=@INSTALL@

top_srcdir=@top_srcdir@

OBJS=yajl.o yajl_alloc.o yajl_buf.o yajl_encode.o yajl_gen.o \
	yajl_lex.o yajl_parser.o yajl_tree.o yajl_version.o

all:	libnoityajl.a

libnoityajl.a:	$(OBJS)
	@rm -f $@
	@$(AR) cq $@ $(OBJS)
	@echo "- archiving $@"
	@$(RANLIB) $@

.c.lo:
	@$(CC) $(CPPFLAGS) $(SHCFLAGS) -c $< -o $@
	@echo "- compiling $<"

.c.o:
	@$(CC) $(CPPFLAGS) $(CFLAGS) -c $<
	@echo "- compiling $<"

clean:
	rm -f *.o libnoityajl.a

distclean:	clean
	rm -f Makefile

Makefile.dep:
	$(CC) -I. -I.. $(CPPFLAGS) $(CFLAGS) $(DEPFLAGS) *.c > Makefile.dep
	$(top_srcdir)/buildtools/culldeps.sh Makefile.dep

include Makefile.dep

