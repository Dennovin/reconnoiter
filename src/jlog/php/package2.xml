<?xml version="1.0"?>
<package version="2.0" xmlns="http://pear.php.net/dtd/package-2.0"
    xmlns:tasks="http://pear.php.net/dtd/tasks-1.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://pear.php.net/dtd/tasks-1.0
http://pear.php.net/dtd/tasks-1.0.xsd
http://pear.php.net/dtd/package-2.0
http://pear.php.net/dtd/package-2.0.xsd">

  <name>jlog</name>
  <channel>pecl.php.net</channel>

  <summary>A sample PHP extension</summary>

  <description>
  This is a sample extension specification
  showing how to use CodeGen_PECL for
  extension generation.
  </description>


  <date>2007-07-02</date>
  <version>
    <release>0.0.1</release>
    <api>0.0.1</api>
  </version>
  <stability>
    <release>devel</release>
    <api>devel</api>
  </stability>

  <license>unknown</license

  <notes>

  </notes>

  <contents>
    <dir name="/">
      <file role='doc' name='EXPERIMENTAL'/>
      <file role='src' name='config.m4'/>
      <file role='src' name='jlog.c'/>
      <file role='src' name='php_jlog.h'/>
      <dir name="tests">
        <file role='test' name='Jlog____construct.phpt'/>
        <file role='test' name='Jlog__add_subscriber.phpt'/>
        <file role='test' name='Jlog__remove_subscriber.phpt'/>
        <file role='test' name='Jlog__list_subscribers.phpt'/>
        <file role='test' name='Jlog__alter_journal_size.phpt'/>
        <file role='test' name='Jlog__raw_size.phpt'/>
        <file role='test' name='Jlog__close.phpt'/>
        <file role='test' name='Jlog_Writer__open.phpt'/>
        <file role='test' name='Jlog_Writer__write.phpt'/>
        <file role='test' name='Jlog_Reader__open.phpt'/>
        <file role='test' name='Jlog_Reader__read.phpt'/>
        <file role='test' name='Jlog_Reader__checkpoint.phpt'/>
        <file role='test' name='Jlog_Reader__auto_checkpoint.phpt'/>
      </dir>
    </dir>
  </contents>

  <dependencies>
    <required>
      <php>
        <min>5.0.0</min>
      </php>
      <pearinstaller>
        <min>1.4.0a1</min>
      </pearinstaller>
    <os><name>unix</name></os>
    </required>
  </dependencies>

  <providesextension>jlog</providesextension>

  <extsrcrelease>
   <configureoption name="with-jlog" default="autodetect" prompt="jlog installation directory?" />
  </extsrcrelease>

</package>
